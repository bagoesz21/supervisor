{
    "name": "supervisorphp/supervisor",
    "description": "PHP library for managing Supervisor through XML-RPC API",
    "homepage": "http://supervisorphp.com",
    "license": "MIT",
    "keywords": [
        "supervisor",
        "process manager"
    ],
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        },
        {
            "name": "Buster Neece",
            "email": "buster@busterneece.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Supervisor\\": "src/"
        }
    },
    "require": {
        "php": "^7.3|^8.0",
        "lstrojny/fxmlrpc": ">=0.12",
        "psr/log": ">=1"
    },
    "require-dev": {
        "ext-pcntl": "*",
        "ext-posix": "*",
        "behat/behat": "^3.0",
        "guzzlehttp/guzzle": "^7.5",
        "php-http/httplug": "^2.1",
        "php-http/message": "^1.8",
        "php-parallel-lint/php-console-highlighter": "^1",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpspec/phpspec": "^6.2",
        "phpstan/phpstan": "^0.12.32",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "roave/security-advisories": "dev-master",
        "supervisorphp/configuration": "^0.3"
    },
    "scripts": {
        "ci": [
            "@composer install --prefer-dist --no-progress --no-suggest",
            "@phplint",
            "@phpstan",
            "@phpspec",
            "@behat"
        ],
        "phplint": "parallel-lint . --exclude vendor",
        "phpstan": "phpstan analyze --xdebug --memory-limit=-1",
        "phpspec": "phpspec run",
        "behat": "behat"
    },
    "config": {
        "preferred-install": "dist",
        "discard-changes": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
